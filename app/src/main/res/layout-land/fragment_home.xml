<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <import type="com.savvytech.savvylevelfour.R" />

        <import type="android.text.Html" />

        <variable
            name="homeFragmentViewModel"
            type="com.savvytech.savvylevelfour.viewmodels.HomeFragmentViewModel" />

        <variable
            name="commonViewModel"
            type="com.savvytech.savvylevelfour.viewmodels.CommonViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky_blue_transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/viewBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/header_shadow"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relHeaderHome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_75sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clParentBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBatteryIcon"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:src="@drawable/ic_battery"
                        android:visibility="@{homeFragmentViewModel.txtFHBatteryStatus}"
                        app:layout_constraintBottom_toBottomOf="@+id/txtFHBatteryStatus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txtFHBatteryStatus" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:visibility="@{homeFragmentViewModel.txtFHBatteryStatus}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivBatteryIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--                    <androidx.appcompat.widget.AppCompatTextView-->
                    <!--                        android:id="@+id/txtFHBatteryStatus"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:fontFamily="@font/poppins_regular"-->
                    <!--                        android:text="BATT: 0V"-->
                    <!--                        android:textColor="@color/black"-->
                    <!--                        android:textSize="@dimen/_11ssp"-->
                    <!--                        android:visibility="@{homeFragmentViewModel.txtFHBatteryStatus}"-->
                    <!--                        app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--                        app:layout_constraintStart_toEndOf="@+id/tvDummy"-->
                    <!--                        app:layout_constraintTop_toTopOf="parent" />-->

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtFHBatteryStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/battery_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="@{homeFragmentViewModel.txtFHBatteryStatus}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvDummy"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtFHBatteryStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/zero_voltage"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        android:visibility="@{homeFragmentViewModel.txtFHBatteryStatus}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txtFHBatteryStatusTitle"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivFHMainLogo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:src="@drawable/savvy_header_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBluetoothStrength"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/bluetooth_medium"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:src="@drawable/ic_bluetooth_connection_status"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBluetoothStrength"
                    app:layout_constraintEnd_toStartOf="@+id/ivBluetoothStrength"
                    app:layout_constraintTop_toTopOf="@+id/ivBluetoothStrength" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/viewFh"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_3d4"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/relHeaderHome" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginStart="@dimen/_75sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFh">

                <RelativeLayout
                    android:id="@+id/relDegreeTopHome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/viewTopHome"
                    android:gravity="top">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtFHRoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="0&#xb0;"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtFHBlockTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/blocks"
                        android:textColor="@color/blue_0b4"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="@{homeFragmentViewModel.txtFHBlockTitle}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTiltHeightTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mms"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="@{homeFragmentViewModel.tvTiltHeightTop}" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relTopHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/viewTopHome">

                    <com.savvytech.savvylevelfour.common.TiltGauge
                        android:id="@+id/viewRoundTop"
                        setZoomInOut="@{commonViewModel.viewRoundTop}"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        custom:gauge_type="right" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relZoomHome"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/viewTopHome"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTenXHome"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/ten_x" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewTopHome"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/home_devider" />

                <RelativeLayout
                    android:id="@+id/relDegreeBottomHome"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/viewTopHome"
                    android:gravity="top">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtFHPitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="0&#xb0;"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTiltHeightBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mms"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="@{homeFragmentViewModel.tvTiltHeightBottom}" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relBottomHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/viewTopHome">

                    <com.savvytech.savvylevelfour.common.TiltGauge
                        android:id="@+id/viewRoundBottom"
                        setZoomInOut="@{commonViewModel.viewRoundTop}"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_centerInParent="true"
                        custom:gauge_type="right" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relSetHitchHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_minus10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/viewTopHome"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/relFHLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/clear_hitch_bg"
                        android:onClick="@{(v)->homeFragmentViewModel.clickOnClearHitch(v)}"
                        android:onLongClick="@{(v)->homeFragmentViewModel.clickOnLongClearHitch(v)}"
                        android:paddingVertical="@dimen/_6sdp"
                        android:visibility="@{homeFragmentViewModel.relFHLock, default = gone}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivClearHitch"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_hitch_locked"
                            app:tint="@color/hitch_red" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ivClearHitch"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="@string/clear_hitch"
                            android:textColor="@color/hitch_red"
                            android:textSize="@dimen/_11ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relSetHitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/set_hitch_bg"
                        android:onClick="@{(v)->homeFragmentViewModel.clickOnSetHitch(v)}"
                        android:onLongClick="@{()->homeFragmentViewModel.longClickOnSetHitch()}"
                        android:paddingVertical="@dimen/_6sdp"
                        android:tag="NORMAL"
                        android:visibility="@{homeFragmentViewModel.relSetHitch, default = gone}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivSetHitch"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_set_hitch"
                            app:tint="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtFHHitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ivSetHitch"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="@string/set_hitch"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnrFHNoDataFound"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginStart="@dimen/_75sdp"
                android:alpha="1"
                android:background="@color/sky_blue_transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFh">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:text="@string/noDataFoundFromDevice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:text="@{homeFragmentViewModel.spannableString}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>