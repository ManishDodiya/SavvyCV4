<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/viewHalfCircle"
        android:layout_width="0sp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/hal_circle"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewupHalf"
        app:layout_constraintStart_toStartOf="@+id/viewupHalf"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewupHalf"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_40sdp"
        android:visibility="visible"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewOneBg"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:visibility="gone"
        android:background="@drawable/corner_radius_top_left"
        app:layout_constraintBottom_toTopOf="@+id/viewupHalf"
        app:layout_constraintStart_toEndOf="@+id/viewupHalf"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewupHalf"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBg"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:visibility="gone"
        android:background="@drawable/corner_radius_top_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewupHalf"
        app:layout_constraintTop_toBottomOf="@+id/viewupHalf" />
</androidx.constraintlayout.widget.ConstraintLayout>